FROM golang:1.24.1 AS builder
WORKDIR /src
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o /out/gimpel-sandbox ./cmd/sandbox

FROM debian:bookworm-slim
RUN apt-get update && apt-get install -y ca-certificates && rm -rf /var/lib/apt/lists/*
WORKDIR /app
COPY --from=builder /out/gimpel-sandbox /app/gimpel-sandbox
ENTRYPOINT ["/app/gimpel-sandbox"]
