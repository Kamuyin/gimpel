{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "io/github/kamuyin/gimpel/web/*": ["webapp/*"]
    },
    "types": []
  },
  "include": [
    "webapp/**/*.ts",
    "webapp/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
